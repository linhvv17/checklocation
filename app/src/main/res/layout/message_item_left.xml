<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="290dp"
    android:padding="9dp"
    android:layout_height="wrap_content">
    <de.hdodenhof.circleimageview.CircleImageView
        android:src="@drawable/profile_image"
        android:id="@+id/img_profile_receiver"
        android:layout_width="40dp"
        android:layout_height="40dp">

    </de.hdodenhof.circleimageview.CircleImageView>
    <TextView
        android:layout_toRightOf="@+id/img_profile_receiver"
        android:id="@+id/show_text_message"
        android:layout_marginLeft="10dp"
        android:padding="8dp"
        android:textColor="#000000"
        android:textSize="24sp"
        android:text="abcdxyz"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/item_message_receiver">
    </TextView>
    <ImageView
        android:layout_below="@+id/show_text_message"
        android:src="@drawable/profile_image"
        android:padding="8dp"
        android:id="@+id/show_image_message_receiver"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginLeft="40dp"
        android:visibility="gone">

    </ImageView>
    <LinearLayout
        android:layout_toRightOf="@id/img_profile_receiver"
        android:layout_below="@id/show_image_message_receiver"
        android:orientation="horizontal"
        android:paddingLeft="8dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/tv_seen"
            android:textColor="#000000"
            android:text="seen"
            android:textSize="18dp"
            android:layout_below="@+id/show_text_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
        </TextView>
        <TextView
            android:layout_marginLeft="10dp"
            android:paddingLeft="8dp"
            android:textSize="14sp"
            android:text="11:00"
            android:id="@+id/time_mess"
            android:layout_below="@+id/show_image_message_receiver"
            android:layout_toRightOf="@+id/img_profile_receiver"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

        </TextView>


    </LinearLayout>

</RelativeLayout>
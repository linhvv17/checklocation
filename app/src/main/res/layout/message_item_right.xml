<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:padding="9dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true">
        <ImageView
            android:visibility="gone"
            android:id="@+id/ic_more_message"
            android:src="@drawable/ic_baseline_more_horiz_24"
            android:layout_toStartOf="@+id/show_text_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@+id/show_text_message">

        </ImageView>
        <TextView
            android:visibility="visible"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:id="@+id/show_text_message"
            android:layout_marginLeft="10dp"
            android:padding="8dp"
            android:textSize="24sp"
            android:text="abcdxyz"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/item_message_send">
        </TextView>
        <ImageView
            android:src="@drawable/profile_image"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/show_text_message"
            android:id="@+id/show_send_image_message"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginLeft="6dp"
            android:visibility="gone">

        </ImageView>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/show_send_image_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/time_mess"
                android:text="11:00"
                android:textSize="14sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

            </TextView>
            <TextView
                android:layout_marginLeft="5dp"
                android:id="@+id/tv_seen"
                android:text="seen"
                android:textColor="#000000"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
            </TextView>

        </LinearLayout>

    </RelativeLayout>


</RelativeLayout>